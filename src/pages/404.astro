---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Page Not Found">
  <Header />

  <main class="min-h-screen flex items-center justify-center relative overflow-hidden">
    <!-- Background decorations -->
    <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[500px] h-[500px] bg-laser/10 blur-[100px] rounded-full pointer-events-none animate-pulse-glow"></div>
    <div class="absolute top-1/4 left-1/4 w-64 h-64 bg-precision-cyan/5 blur-[80px] rounded-full pointer-events-none"></div>
    <div class="absolute bottom-1/4 right-1/4 w-48 h-48 bg-laser/5 blur-[60px] rounded-full pointer-events-none"></div>

    <!-- Corner brackets -->
    <div class="absolute top-20 left-0 w-32 h-32 border-l-2 border-t-2 border-laser/30"></div>
    <div class="absolute top-20 right-0 w-32 h-32 border-r-2 border-t-2 border-laser/30"></div>
    <div class="absolute bottom-0 left-0 w-32 h-32 border-l-2 border-b-2 border-laser/30"></div>
    <div class="absolute bottom-0 right-0 w-32 h-32 border-r-2 border-b-2 border-laser/30"></div>

    <div class="relative z-10 text-center px-6">
      <div class="inline-flex items-center gap-3 mb-8">
        <span class="w-12 h-[1px] bg-laser"></span>
        <span class="font-mono text-sm tracking-[0.3em] text-laser uppercase">Error 404</span>
        <span class="w-12 h-[1px] bg-laser"></span>
      </div>

      <h1 class="font-display text-6xl md:text-8xl font-bold text-white mb-6 tracking-tight">
        Page Not <span class="text-steel-600">Found</span>
      </h1>

      <p class="font-body text-steel-400 text-lg max-w-md mx-auto mb-10">
        The component you are looking for has been moved or does not exist. 
        Please check the URL or return to the main dashboard.
      </p>

      <a 
        href="/" 
        class="inline-flex items-center gap-3 px-8 py-4 bg-steel-900 border border-steel-700 hover:border-laser/50 text-white font-display tracking-widest uppercase text-sm transition-all hover:bg-steel-800"
      >
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path></svg>
        Return Home
      </a>
    </div>
  </main>

  <Footer />
</Layout>