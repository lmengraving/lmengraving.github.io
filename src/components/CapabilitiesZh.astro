---
const capabilities = [
  { label: '3D 雕刻', value: '曲面轮廓', detail: '复杂模具表面加工' },
  { label: '激光轴数', value: '5轴联动', detail: '确保无倒扣死角' },
  { label: '电极制造', value: '石墨电极', detail: '紫铜与石墨精密加工' },
  { label: '激光打标', value: '型腔编号', detail: 'Logo、版本号与规格' },
];

const industries = ['注塑成型', '压铸模具', '医疗器械', '航空航天', '汽车制造', '包装行业', '消费电子'];
---

<section id="capabilities" class="py-16 md:py-24 lg:py-32 relative">
  <div class="absolute top-0 left-0 right-0 h-[1px] bg-gradient-to-r from-transparent via-steel-700 to-transparent"></div>

  <div class="max-w-7xl mx-auto px-6 lg:px-8">
    <div class="text-center mb-16">
      <div class="inline-flex items-center gap-3 mb-6">
        <span class="w-8 h-[1px] bg-steel-600"></span>
        <span class="font-mono text-xs tracking-[0.3em] text-steel-400 uppercase">技术规格</span>
        <span class="w-8 h-[1px] bg-steel-600"></span>
      </div>
      
      <h2 class="font-display text-4xl md:text-5xl font-bold tracking-tight text-white mb-6">
        我们的 <span class="text-laser">核心能力</span>
      </h2>
    </div>
    
    <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-16">
      {capabilities.map((cap) => (
        <div class="bg-steel-950 border border-steel-800 p-6 hover:border-laser/30 transition-colors text-center">
          <div class="font-mono text-[10px] tracking-widest text-steel-500 uppercase mb-2">{cap.label}</div>
          <div class="font-display text-3xl font-bold text-white mb-1">{cap.value}</div>
          <div class="font-body text-xs text-steel-400">{cap.detail}</div>
        </div>
      ))}
    </div>

    <div class="text-center">
      <h3 class="font-mono text-xs tracking-widest text-steel-400 uppercase mb-6">服务行业</h3>
      <div class="flex flex-wrap justify-center gap-2">
        {industries.map((industry) => (
          <span class="px-4 py-2 bg-steel-800/50 border border-steel-700 font-mono text-[11px] text-steel-300 hover:border-laser/50 hover:text-white transition-colors">
            {industry}
          </span>
        ))}
      </div>
    </div>
  </div>
</section>